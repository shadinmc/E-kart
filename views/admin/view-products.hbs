<section>
     <div class="container">
          <table class="table mt-5" id="productsTable">
               <thead>
                    <tr>
                         <th scope="col">#</th>
                         <th scope="col">Title</th>
                         <th scope="col">Category</th>
                         <th scope="col">Description</th>
                         <th scope="col">image</th>
                         <th scope="col">Price</th>
                         <th scope="col">Options</th>
                    </tr>
               </thead>
               <tbody>
                    {{#each products}}
                    <tr>
                         <th scope="row">{{inc @index}}</th>
                         <td>{{this.Name}}</td>
                         <td>{{this.Category}}</td>
                         <td>{{this.Description}}</td>
                         <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                         <td>{{this.Price}}</td>
                         <td>
                              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                   onclick="return confirm('Are you sure you want to delete {{this.Name}}?');">Delete</a>
                         </td>

                    </tr>

                    {{/each}}
               </tbody>
          </table>
          <div class="text-center my-3">
               <a href="admin/add-product" class="btn btn-success">Add Product</a>
          </div>

     </div>
</section>
<script>
     document.addEventListener('DOMContentLoaded', function () {
          new DataTable('#productsTable', {
               paging: true,         // enable pagination
               searching: true,      // enable search box
               ordering: true,       // enable sorting
               info: true,           // show "Showing X of Y entries"
               layout: {
                    topStart: 'search',
                    bottomStart: 'info',
                    bottomEnd: 'paging'
               }
          });
     });
</script>