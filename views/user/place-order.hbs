<<div class="container mt-5">
  <h2 class="mb-4">Place Your Order</h2>

  <form id="check-out-form" method="POST" action="/place-order">

    <!-- Address -->
    <div class="mb-3">
      <label for="address" class="form-label">Address</label>
      <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter your address"
        required>{{user.address}}</textarea>
    </div>

    <!-- PIN Code -->
    <div class="mb-3">
      <label for="pincode" class="form-label">PIN Code</label>
      <input type="tel" class="form-control" id="pincode" name="pincode" placeholder="Enter 6-digit PIN code" required
        pattern="[0-9]{6}" maxlength="6" value="{{user.pincode}}" title="Enter a 6-digit PIN code">
    </div>

    <!-- Phone Number -->
    <div class="mb-3">
      <label for="phone" class="form-label">Phone Number</label>
      <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required
        pattern="[0-9]{10}" value="{{user.phone}}">
    </div>

    <!-- Comments -->
    <div class="mb-3">
      <label for="comments" class="form-label">Comments</label>
      <textarea class="form-control" id="comments" name="comments" rows="2"
        placeholder="Any special instructions?">{{oldComments}}</textarea>
    </div>

    <!-- Payment Method -->
    <div class="mb-3">
      <label class="form-label">Payment Method</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod" {{#ifEquals
          oldPayment "cod" }}checked{{/ifEquals}}>
        <label class="form-check-label" for="cod">Cash on Delivery (COD)</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" id="online" value="online" {{#ifEquals
          oldPayment "online" }}checked{{/ifEquals}}>
        <label class="form-check-label" for="online">Online Payment</label>
      </div>
    </div>
    <div class="mb-3">
      <h4>
        Total Amount to Pay: â‚¹
        <span style="font-size: 2rem; font-family: Impact, Charcoal, sans-serif;
; color: #d90303;">
          {{total}}
        </span>
      </h4>
    </div>
    <!-- Place Order Button -->
    <button type="submit" class="btn btn-primary">Place Order</button>

  </form>
  </div>
