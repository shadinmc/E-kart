<div class="container mt-5">
  <h2 class="mb-4">Place Your Order</h2>

  <form id="check-out-form" method="POST" action="/place-order">
    <!-- Address -->
    <div class="mb-3">
      <label for="address" class="form-label">Address</label>
      <textarea class="form-control" id="address" name="address" rows="3" required>{{user.address}}</textarea>
    </div>

    <!-- PIN Code -->
    <div class="mb-3">
      <label for="pincode" class="form-label">PIN Code</label>
      <input type="tel" class="form-control" id="pincode" name="pincode" required pattern="[0-9]{6}" maxlength="6"
        value="{{user.pincode}}" title="Enter a 6-digit PIN code">
    </div>

    <!-- Phone Number -->
    <div class="mb-3">
      <label for="phone" class="form-label">Phone Number</label>
      <input type="tel" class="form-control" id="phone" name="phone" required pattern="[0-9]{10}"
        value="{{user.phone}}">
    </div>

    <!-- Comments -->
    <div class="mb-3">
      <label for="comments" class="form-label">Comments</label>
      <textarea class="form-control" id="comments" name="comments" rows="2"
        placeholder="Any special instructions?">{{oldComments}}</textarea>
    </div>

    <!-- Payment Method -->
    <div class="mb-3">
      <label class="form-label">Payment Method</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod" checked>
        <label class="form-check-label" for="cod">Cash on Delivery (COD)</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="paymentMethod" id="online" value="online">
        <label class="form-check-label" for="online">Online Payment</label>
      </div>
    </div>

    <div class="mb-3">
      <h4>Total Amount to Pay: â‚¹
        <span style="font-size: 2rem; font-family: Impact, Charcoal, sans-serif; color: #d90303;">
          {{total}}
        </span>
      </h4>
    </div>

    <!-- Place Order Button -->
    <button type="submit" class="btn btn-primary">Place Order</button>
  </form>
</div>

<!-- Razorpay Script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  document.getElementById('check-out-form').addEventListener('submit', async function (e) {
    e.preventDefault(); // stop form from directly submitting

    const form = e.target;
    const formData = new FormData(form);

    const data = {};
    formData.forEach((value, key) => data[key] = value);

    // Send to backend
    const res = await fetch('/place-order', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    });

    const response = await res.json();

    if (response.onlinePayment) {
      // Razorpay payment
      const order = response.razorpayOrder
      const options = {
        "key": "rzp_test_RYqHM2J0hEBZCJ", // Replace with your actual key
        "amount": order.amount,
        "currency": "INR",
        "name": "E-Kart Store",
        "description": "Order Payment",
        "order_id": order.id,
        "handler": function (paymentResult) {
          alert("Payment successful! ðŸ¥³");
          window.location.href = '/order-success';
        },
        "prefill": {
          "name": "{{user.name}}",
          "email": "{{user.email}}",
          "contact": "{{user.phone}}"
        },
        "theme": {
          "color": "#3399cc"
        }
      };
      const rzp = new Razorpay(options);
      rzp.open();
    } else {
      // COD â†’ just redirect
      window.location.href = '/order-success';
    }
  });
</script>
